page {
  background:rgb(196, 230, 243);
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.uploader{
  margin-top: 40rpx;
  padding-left:70rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
